<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- wikumart.kasir inherit tree view -->
    <record id="wikumart_kasir_view_tree_inherit" model="ir.ui.view">
        <field name="name">Daftar Kasir</field>
        <field name="model">wikumart.kasir</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="wikumart_person_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="id_kasir"/>
            </xpath>
        </field>
    </record>
    <!-- wikumart.kasir inherit form view -->
    <record id="wikumart_kasir_view_form_inherit" model="ir.ui.view">
        <field name="name">Form Kasir</field>
        <field name="model">wikumart.kasir</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="wikumart_person_view_form"/>
        <field name="arch" type="xml">
           <xpath expr="//form//sheet//group[2]" position="after">
                <group name="id" string="ID">
                    <field name="id_kasir"/>
                </group>
           </xpath>
           <xpath expr="//field[@name='alamat']" position="attributes">
                <attribute name="string">Address</attribute>            
           </xpath>
        </field>
    </record>
    <!-- wikumart.kasir action window -->
    <record id="wikumart_kasir_action" model="ir.actions.act_window">
        <field name="name">Kasir</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wikumart.kasir</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="wikumart_kasir_menu_act" 
              name="Kasir" 
              parent="wikumart_pegawai_menu_categ" 
              action="wikumart_kasir_action" 
              sequence="10"/>

</odoo>
